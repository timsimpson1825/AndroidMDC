<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lpDetailsGridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left|top"
    android:columnCount="3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.havertys.androidmdc.lp.receiving.LpReceivingFragment" >

    <ImageView
        android:id="@+id/lpDetailImageView"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/lpNumberTextView"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="lp_number"/>

    <TextView
        android:id="@+id/itemDescriptionView"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="item_description" />

    <TextView
        android:id="@+id/vendorDescriptionView"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="vendor_description" />

    <TextView
        android:id="@+id/itemView"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="item" />

    <TextView
        android:id="@+id/itemStatusLabel"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="Status: " />

    <TextView
        android:id="@+id/itemStatusView"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="status" />

    <TextView
        android:id="@+id/itemCollectionLabel"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="Collection: " />

    <TextView
        android:id="@+id/itemCollectionView"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="collection" />

    <TextView
        android:id="@+id/itemSaleLabel"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:text="Sale #: " />

    <TextView
        android:id="@+id/itemSaleView"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:text="sale" />

</GridLayout>