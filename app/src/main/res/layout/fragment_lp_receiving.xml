
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayoutLpReceiving"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.havertys.androidmdc.lp.receiving.LpReceivingFragmentOrig"
    android:rowCount="4">

    <TextView
        android:id="@+id/lpReceivingErrorMsg"
        android:layout_row="0"
        android:paddingTop="5dp"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_columnSpan="2">
    </TextView>

    <TextView
        android:id="@+id/lpReceivingLocationTextView"
        android:layout_column="0"
        android:layout_row="1"
        android:paddingTop="5dp"
        android:text="Location" >
    </TextView>

    <EditText
        android:id="@+id/lpReceivingLocationEditText"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:ems="10"
        android:inputType="text" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lpReceivingLpTextView"
        android:layout_column="0"
        android:layout_row="2"
        android:paddingTop="5dp"
        android:text="LP" >

    </TextView>

    <EditText
        android:id="@+id/lpReceivingLpEditText"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/lpReceivingGo"
        android:layout_column="1"
        android:layout_gravity="top|right"
        android:layout_row="3"
        android:text="Go" />

    <Space />

</GridLayout>